<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topLayer"
        android:background="#308856"
        android:layout_width="match_parent"
        android:layout_height="169dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/rapport_logo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_width="79dp"
            android:layout_height="27dp"
            android:layout_marginTop="89dp"
            android:text="Sign In"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLayer">

        <EditText
            android:textColorHint="#308856"
            android:id="@+id/login_email"
            android:background="@drawable/input"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:hint="user@gmail.com"
            android:ems="10"
            android:inputType="textEmailAddress"/>


        <EditText
            android:textColorHint="#308856"
            android:id="@+id/login_password"
            android:background="@drawable/input"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="72dp"
            android:layout_marginRight="15dp"
            android:hint="Password" android:ems="10"
            android:inputType="textPassword"/>


        <Button
            android:textColor="#ffffff"
            android:id="@+id/login_continue"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="132dp"
            android:layout_marginRight="15dp"
            android:text="Continue"/>

        <TextView
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:gravity="center_horizontal"
            android:id="@+id/create_account_link"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="208dp"
            android:layout_marginRight="66dp"
            android:text="Don&apos;t have an account ? Create New."
            android:layout_marginStart="3dp"/>

        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#2e8b57"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="153dp"
            android:text="or Login With"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textColor="#fb2658"
            android:gravity="center"
            android:id="@+id/login_with_google"
            android:background="@drawable/input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="95dp"
            android:text="LOGIN WITH GOOGLE"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textColor="#2699fb"
            android:gravity="center"
            android:id="@+id/login_with_facebook"
            android:background="@drawable/input2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="37dp"
            android:text="LOGIN WITH FACEBOOK"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
