<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="#dcdcdc"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
        android:id="@+id/profile_main_page_toolbar"
        layout="@layout/app_bar_layout"/>


    <ImageView android:id="@+id/profile_logo"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/profile_logo"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_alignParentStart="true"/>


    <TextView
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="9dp"
        android:text="Profile and Settings"
        android:layout_alignParentStart="true"/>



    <ImageView
        android:id="@+id/profile_editing"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/edit_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ProfileSettingToolbar"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/profile_main_page_toolbar"
        android:layout_marginStart="-1dp"
        android:layout_alignParentStart="true">

        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#308856"
            android:gravity="center"
            android:id="@+id/profile_page_profileInfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:text="PROFILE"/>

        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#308856"
            android:gravity="center"
            android:id="@+id/main_page_tool"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:text="SETTINGS"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Button_Layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProfileSettingToolbar">

        <Button android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/logout_btn"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp" android:text="Logout"
            android:textAllCaps="false"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="50dp"/>
        <TextView
            android:id="@+id/version_update_details_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Rapport Alpha v1.2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/logout_btn"
            android:gravity="center" />


        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/logout_btn"

            android:layout_toEndOf="@+id/version_update_details_text"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@drawable/noti" />



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/profileInfo"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/Button_Layer">


        <ImageView
            android:id="@+id/profile_user_image"
            android:layout_width="150dp"
            android:layout_height="156dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"/>

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/profile_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="User Name"
            android:layout_marginStart="180dp"/>

        <TextView
            android:textSize="18dp"
            android:textColor="#000000"
            android:id="@+id/profile_user_Job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Job"
            android:layout_marginStart="180dp"/>

        <TextView
            android:textSize="18dp"
            android:textColor="#000000"
            android:id="@+id/profile_user_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:text="City"
            android:layout_marginStart="180dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile_education_layer"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/profileInfo">

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#308856"
            android:id="@+id/profile_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Education"
            android:layout_marginStart="8dp"/>


        <View
            android:layout_gravity="center"
            android:id="@+id/profile_underline1"
            android:background="#308856"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profile_education"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>


        <TextView
            android:textSize="18dp"
            android:textColor="#000000"
            android:id="@+id/profile_sama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="SAMA  : 123456"
            android:layout_below="@+id/profile_underline1"
            android:layout_marginStart="15dp"/>

        <TextView
            android:textSize="18dp"
            android:textColor="#000000"
            android:id="@+id/profile_university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="UNIVERSITY"
            android:layout_below="@+id/profile_sama"
            android:layout_marginStart="15dp"/>

        <TextView
            android:textSize="18dp"
            android:textColor="#000000"
            android:id="@+id/profile_graduated_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Graduated : 2019 March"
            android:layout_below="@+id/profile_university"
            android:layout_marginStart="15dp"/>

        <TextView
            android:textSize="18dp"
            android:textColor="#000000"
            android:id="@+id/profile_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:text="DEGREE"
            android:layout_below="@+id/profile_graduated_date"
            android:layout_marginStart="15dp"/>



    </RelativeLayout>


        <Button
            android:id="@+id/profile_my_posts_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="My Posts"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:layout_below="@id/profile_education_layer"
            />

    </RelativeLayout>


    </ScrollView>
