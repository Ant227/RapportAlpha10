<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/profile_edit_toolbar"
            layout="@layout/app_bar_layout"/>

        <RelativeLayout
            android:id="@+id/profile_edit_person_info"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ProfileSettingToolbar">


            <ImageView
                android:id="@+id/profile_edit_user_image"
                android:layout_width="170dp"
                android:layout_height="156dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <Button
                android:id="@+id/profile_edit_user_image_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@+id/profile_edit_user_image"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/profile_image_edit_background"
                android:text="Edit Photo"
                android:textAllCaps="false"
                />


            <TextView
                android:id="@+id/dr_profile_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_edit_user_image"
                android:layout_alignTop="@+id/profile_edit_UserName"
                android:layout_marginStart="8dp"
                android:text="Dr."
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/background_left"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"/>
            <EditText
                android:id="@+id/profile_edit_UserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_edit_user_image"
                android:layout_toEndOf="@+id/dr_profile_edit"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_right"
                android:cursorVisible="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginRight="8dp"
                android:text="User Name"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_edit_Job"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_below="@+id/profile_edit_UserName"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/profile_image_edit_background"
                android:text="Job"
                android:layout_marginStart="8dp"/>

            <EditText
                android:id="@+id/profile_edit_City"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_edit_Job"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
               android:background="@drawable/profile_image_edit_background"
                android:text="City"
                android:layout_marginStart="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_edit_education_layer"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profileInfo">

            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#308856"
                android:id="@+id/profile_edit_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Education"
                android:layout_marginStart="8dp"/>


            <View
                android:layout_gravity="center"
                android:id="@+id/profile_edit_underline1"
                android:background="#308856"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/profile_edit_education"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>


            <TextView
                android:id="@+id/sama_profile_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/profile_edit_underline1"
                android:text="SAMA: "
                android:textColor="#000000"
                android:textSize="18dp"
                android:background="@drawable/background_left"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"/>


            <EditText
                android:id="@+id/profile_edit_sama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_edit_underline1"
                android:layout_toEndOf="@+id/sama_profile_edit"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_right"
                android:cursorVisible="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginRight="8dp"
                android:text="User Name"
                android:textColor="#000000"
                android:textSize="18dp"
               />

            <EditText
                android:id="@+id/profile_edit_university"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/profile_image_edit_background"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="UNIVERSITY"
                android:layout_below="@+id/profile_edit_sama"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/profile_edit_graduated_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:background="@drawable/profile_image_edit_background"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="Graduated : 2019 March"
                android:layout_below="@+id/profile_edit_university"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/profile_edit_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/profile_image_edit_background"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:text="DEGREE"
                android:layout_below="@+id/profile_edit_graduated_date"
                android:layout_marginStart="15dp"
                android:textSize="18dp"
                android:textColor="#000000"/>

        </RelativeLayout>


         <Button
             android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/profile_edit_update_btn"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Update Profile"
        android:textAllCaps="false"
        android:layout_marginStart="50dp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"/>

    </LinearLayout>


</ScrollView>