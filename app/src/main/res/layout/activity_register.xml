<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/register_topLayer"
        android:background="#308856"
        android:layout_width="match_parent"
        android:layout_height="169dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/rapport_logo"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:layout_marginTop="89dp"
            android:text="Create Account"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/register_topLayer">

        <EditText
            android:textColorHint="#308856"
            android:id="@+id/register_email"
            android:background="@drawable/input"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:hint="user@gmail.com"
            android:ems="10"
            android:inputType="textEmailAddress"/>


        <EditText
            android:textColorHint="#308856"
            android:id="@+id/register_password"
            android:background="@drawable/input"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="72dp"
            android:layout_marginRight="15dp"
            android:hint="Password"
            android:ems="10" android:inputType="textPassword"/>

        <EditText
            android:textColorHint="#308856"
            android:id="@+id/register_password_confirm"
            android:background="@drawable/input"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="132dp"
            android:layout_marginRight="15dp"
            android:hint="confirm Password"
            android:ems="10"
            android:inputType="textPassword"/>



        <Button
            android:textColor="#ffffff"
            android:id="@+id/register_continue"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="192dp"
            android:layout_marginRight="15dp"
            android:text="Continue"/>
    </RelativeLayout>
</RelativeLayout>
