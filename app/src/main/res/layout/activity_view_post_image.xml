<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".ViewPostImageActivity"    >    <ImageView        android:id="@+id/viewimage_clear"        android:layout_width="62dp"        android:layout_height="62dp"        android:src="@drawable/cancel_icon"        android:layout_marginRight="16dp"        android:layout_alignParentRight="true"        android:layout_alignParentTop="true"/>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center">    <ImageView        android:id="@+id/viewimage_image"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:src="@drawable/black_ant_toy"/>    </RelativeLayout></RelativeLayout>